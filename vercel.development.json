{
  "version": 2,
  "name": "bioorbit-dev",
  "buildCommand": "cd frontend && npm run build:dev",
  "outputDirectory": "frontend/dist",
  "installCommand": "cd frontend && npm install",
  "framework": "vite",
  "regions": ["iad1"],
  "functions": {
    "frontend/src/**/*": {
      "maxDuration": 30
    }
  },
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "Cache-Control",
          "value": "no-cache, no-store, must-revalidate"
        }
      ]
    }
  ],
  "rewrites": [
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ],
  "env": {
    "NODE_ENV": "development",
    "VITE_NODE_ENV": "development"
  },
  "build": {
    "env": {
      "NODE_ENV": "development"
    }
  }
}
